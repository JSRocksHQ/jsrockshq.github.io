.main-container {
    position: relative;
    z-index: 5;
    margin-top: -40px;
    /*background-color: #0b0b0b;*/

    .main {
        padding: 0;
    }
}


.wrapper-label {
    font-size: 3rem;
    text-transform: uppercase;
    margin: 0;
    padding-top: 3rem;
    text-align: center;
    color: white;

    .icon {
        display: inline-block;
        float: none;
        margin-right: 5px;
    }
}

//body[data-page-type="home"] {
body[data-page-type="home"]{
    article{
        a{
            color: #000;
            font-weight: bold;
            transition: color linear transitionTime;
        }

        &:hover{
            a{
                color: fullColor;
            }
        }
    }
}


    article {
        position: relative;
        background: fullColor;
        transition: background linear transitionTime;
        float: left;
        padding: 2rem;
        position: relative;
        overflow: hidden;

        &.recent {
            h2 {
                font-size: 3.2rem;
                line-height: 3.2rem;
                margin: 2rem 0;
            }

            .article-tags {
                margin: 1rem 0;
                font-size: 1rem;

                li {
                    height: 34px;
                    line-height: 30px;
                }
            }

            address {
                padding: 1rem;
            }
        }

        &:hover {
            background: #fff;

            .article-share {
                opacity: 1;
            }
        }

        .article-share {
            position: absolute;
            right: 0;
            top: 0;
            opacity: 0;
            transition: opacity linear transitionTime;

            a {
                margin: 1px 1px 0 0;
            }
        }

        >a {
            color: #000;
            text-decoration: none;
        }

        h2, h3 {
            font-size: 1.6rem;
            margin: 1rem 0;
            text-transform: uppercase;
        }

        h3 {
            margin-top: .5rem;
        }

        time {
            font-style: italic;
            font-size: .7rem;
        }

        abstract {
            font-size: .8rem;
            line-height: 1rem;
            display: block;
            text-overflow: clip ellipsis;
        }

    }
//}

address {

    padding: .4rem;
    width: 100%;
    position: absolute;
    bottom: 20px;

    .author-label {
        color: darkFullColor;
        margin-top: 10px;
        display: block;
        clear: right;
        margin-bottom: -5px;
    }

    .author-link {
        text-decoration: none;
        color: #000;
        font-weight: bold;
        font-style: normal;
        display: inline-block;

    }
}

.article-tags {
    list-style: none;
    display: inline-block;
    padding: 0;
    font-weight: bold;
    margin: .3rem 0;
    font-size: .7rem;
    position: absolute;
    bottom: 90px;

    li {
        float: left;
        border: solid 2px #000;
        padding: 0 5px;
        border-radius: 5px;
        margin: 2px;
        height: 24px;
        line-height: 20px;

        &:hover {
            background-color: fullColor;
        }

        a {
            color: #000;
            text-decoration: none;
        }
    }
    

    &.article-tags-internal{
        bottom: 118px;
        padding: 0;
    }
}

/* TODO : More posts - page post*/
.other-articles-container {
    margin-top: 2rem;
    display: none;
}

/* TODO : More posts - page home*/
.more-posts-wrapper{
    display: none;
}

.more-posts-wrapper,
.go-to-top-wrapper {

    .btn {
        margin: 0 auto;
    }

    .decorator-line {
        position: absolute;
        top: 18px;
    }

    .dl-5 {
        left: 10px;
    }

    .dl-6 {
        right: 10px;
    }
}

.go-to-top-wrapper {
    padding-bottom: 35px;
}

.main-article {

    padding: 10px;

    article {
        margin: 0;
        width: 100%;
        height: auto;
        background-color: white;
        float: none;

        a{
            &:hover{
                text-decoration: underline;
            }
        }

        &.contrasted{
            background-color: black;
            color: fullColor;
            
            a{
                color: white;
            }
        }
    }
}

.article-meta {
    color: white;
    text-align: center;

    a {
        color: white;
    }

    address {
        border-top: none;
        width: auto;
        margin: auto;
        display: inline-block;
        white-space: nowrap;
        min-width: 200px;
        text-align: left;
        position: static;
        bottom: auto;
    }

    time {
        display: block;
    }

    h2 {
        text-transform: uppercase;
        font-size: 3rem;
        line-height: 3rem;
        margin: 1rem;
        color: fullColor;
    }

    .article-tags {
        li {
            border: solid 1px white;
            margin: 4px;
            font-weight: normal;

            a {
                color: white;
            }
        }
    }
}

.comments-container {
    background-color: white;
    margin-top: 2rem;
    padding: 1rem;

    a {
        color: blueish;
    }
}

